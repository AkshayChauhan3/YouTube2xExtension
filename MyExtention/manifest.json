{
    "manifest_version": 3,
    "name": "YouTube Speed Toggle",
    "version": "1.0",
    "description": "Toggle YouTube video speed between 1x and 2x.",
    "host_permissions": ["https://www.youtube.com/*"],
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/*"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "48": "icon.jpg",
      "128": "icon.jpg"
    }
  }
  